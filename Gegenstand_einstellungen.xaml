<Window x:Class="Lumpix.Inventar.Verwaltung_.Gegenstand_einstellungen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lumpix.Inventar.Verwaltung_"
        mc:Ignorable="d"
        Title="Gegenstand_einstellungen" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Label Content="--[ausgewähltes Item]-- Ändern / Infos" Grid.ColumnSpan="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="25" FontFamily="Good Times" Name="lbl_Ausgewähltes_Item"/>
        
        <Label Content="Name:" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="25" FontFamily="Good Times"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,20" Name="txt_name" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" LostFocus="txt_name_LostFocus"/>

        <Label Content="EK:" Grid.Row="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="25" FontFamily="Good Times"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="0,20" Name="txt_EK" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" LostFocus="txt_EK_LostFocus"/>

        <Label Content="Type:" Grid.Row="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="25" FontFamily="Good Times"/>
        <ComboBox Grid.Row="4" Grid.Column="1" Margin="0,20" Name="cmb_type" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" LostFocus="txt_EK_LostFocus">
            <ComboBoxItem Content="Schädlingsbekämpfer"/>
            <ComboBoxItem Content="Blumen"/>
            <ComboBoxItem Content="Pflanzen"/>
            <ComboBoxItem Content="Fertige Arbeiten"/>
            <ComboBoxItem Content="Sonstiges"/>
        </ComboBox>

        <Label Content="VK:" Grid.Row="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="25" FontFamily="Good Times"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="0,20" Name="txt_VK"  Focusable="False" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        <Label Content="Mänge:" Grid.Row="3" Grid.Column="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="25" FontFamily="Good Times"/>
        <TextBox Grid.Row="3" Grid.Column="4" Margin="0,20" Name="txt_Maenge" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        <Label Content="Info:" Grid.Row="4" Grid.Column="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="25" FontFamily="Good Times"/>
        <TextBox Grid.Row="4" Grid.Column="4" Margin="0,20" Name="txt_Info" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
