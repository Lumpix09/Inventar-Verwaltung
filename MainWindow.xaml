<Window x:Class="Lumpix.Inventar.Verwaltung_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lumpix.Inventar.Verwaltung_"
        mc:Ignorable="d"
        Title="Inventar" Height="450" Width="800"
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded"
        Icon="/2897785.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="2" Content="Neuen erstellen" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" FontFamily="Good Times"/>

        <ListView Grid.Column="5" Grid.ColumnSpan="2" Grid.RowSpan="8" Name="_list_got_1" Background="AliceBlue" Margin="0,7" FontFamily="Good Times"/>
        <ListView Grid.Column="8" Grid.ColumnSpan="1" Grid.RowSpan="8" Name="_list_got_2" Background="Azure" Margin="0,7,7,7" FontFamily="Good Times" IsHitTestVisible="False"/>

        <Button Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" Background="White"  Width="50" Height="50" Name="btn_add" Click="btn_add_Click">
            <StackPanel>
                <Image Source="/add-ellipse-svgrepo-com.png" Margin="3"/>
            </StackPanel>
        </Button>
        <Button Name="btn_delitm" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="4" Content="Gegenstand löschen" Background="White" Margin="5" BorderThickness="1" Click="btn_delitm_Click"/>
        <Button Name="btn_changpath" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="5" Content="Pfad Ändern" Background="White" Margin="5" BorderThickness="1" Click="btn_changpath_Click"/>
        <Button Name="btn_item_settings" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="3" Background="White" Margin="5" MaxHeight="50" MaxWidth="50" Click="btn_item_settings_Click">
            <StackPanel>
                <Image Source="/settings-svgrepo-com.png" Margin="0"/>
            </StackPanel>
        </Button>
        
        <Button Name="btn_type_settings" Grid.Column="2" Grid.ColumnSpan="1" Grid.Row="6" Background="White" Margin="5" MaxHeight="50" MaxWidth="50" Click="btn_type_settings_Click">
            <StackPanel>
                <Image Source="/settings-svgrepo-com.png" Margin="0"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
