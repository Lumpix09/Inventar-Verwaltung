<Window x:Class="Lumpix.Inventar.Verwaltung_.Type_Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lumpix.Inventar.Verwaltung_"
        mc:Ignorable="d"
        Title="Type Settings" Height="450" Width="800"> 
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Types Ändern" Grid.ColumnSpan="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="25" FontFamily="Good Times"/>
        
        <ListView Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="6" Background="AliceBlue" Margin="0,7" FontFamily="Good Times" Name="Types" SelectionChanged="Types_SelectionChanged"/>
        <ListView Grid.Column="4" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="6" Background="Azure" Margin="0,7,7,7" FontFamily="Good Times" IsHitTestVisible="False" Name="Factor"/>
        
        <Button Name="btn_import_data" Grid.Row="6" Grid.Column="0" MaxHeight="50" MaxWidth="50" Click="btn_import_data_Click" Background="white">
            <StackPanel>
                <Image Source="/import-2-svgrepo-com.png" Margin="0"/>
            </StackPanel>
        </Button>
        <Button Name="btn_export_data" Grid.Row="6" Grid.Column="2" MaxHeight="50" MaxWidth="50" Click="btn_export_data_Click" Background="white">
            <StackPanel>
                <Image Source="/export-2-svgrepo-com.png" Margin="0"/>
            </StackPanel>
        </Button>

        <Button Name="btn_add_type" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1" MaxHeight="50" MaxWidth="50" Margin="0" Click="btn_add_type_Click" Background="White">
            <StackPanel>
                <Image Source="/add-ellipse-svgrepo-com.png" Margin="0"/>
            </StackPanel>
        </Button>
        <Button Name="btn_remove_type" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="1" MaxHeight="50" MaxWidth="50" Margin="0" Click="btn_remove_type_Click" Background="White">
            <StackPanel>
                <Image Source="/remove-ellipse-svgrepo-com.png" Margin="0"/>
            </StackPanel>
        </Button>

        <Label Content="Type Name:" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="19" FontFamily="Good Times"/>
        <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1" Margin="10,20" Name="txt_type_name" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Text="Type Name" LostFocus="txt_type_name_LostFocus"/>

        <Label Content="Faktor:" Grid.Row="2" Grid.Column="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="19" FontFamily="Good Times"/> 
        <TextBox Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" Margin="10,20" Name="txt_type_factor" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Text="1.0" LostFocus="txt_type_factor_LostFocus"/>
    </Grid>
</Window>
